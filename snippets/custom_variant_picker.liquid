{% style %}
  .product-options-selctor label {
    width: 35px;
    height: 35px;
    position: relative;
    background-size: 100% !important;
    border-radius: 50%;
    display: flex;
    margin-right: 10px;
    cursor: pointer;
    background-position: center !important;
    background-repeat: no-repeat !important;
  }
  .product-options-selctor input:checked + label:after {
    content: "";
    position: absolute;
    top: -5px;
    left: -5px;
    width: 40px;
    height: 40px;
    border: 3px solid #959595;
    border-radius: 50%;
  }
  .swatch-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }


  .product-options-selctor select {
    width: 100%;
    height: 50px;
    padding-left: 10px;
  }

  .product-options-selctor fieldset {
    margin-bottom: 20px;
    border: none;
    padding: 0;
  }
  .product-options-selctor select {
    width: 100%;
    height: 50px;
    padding-left: 10px;
  }



  button.custom_buy_button {
    width: 100%;
    padding: 15px;
    text-transform: uppercase;
    font-weight: 600;
    color: #fff;
    transition: 0.25s ease;
    cursor: pointer;
    background: #000000;
  }

  button.custom_buy_button:hover {
    color: #000000;
    background: #fff;
  }

  .button-buy-custom a {
    color: #000000;
  }
  button.custom_buy_button + p {
    display: none;
  }

  button.custom_buy_button[disabled] + p {
    display: block;
  }

  li.product__media-item.is-active {
    width: 100%;
    max-width: 100%;
  }
{% endstyle %}
<ul class="variant-information-ul" style=" display: none; ">
  {% for variant in product.variants %}
    <li
      data-var-id="{{ variant.id }}"
      data-price="{{ variant.price | money_with_currency | remove: '$' }}"
      data-select-image="{{ variant.image | img_url: 'master' }}">{{ variant.title }}</li>
  {% endfor %}
</ul>
<div class="product-options-selctor">
  {%- unless product.has_only_default_variant -%}
    {%- for option in product.options_with_values -%}
      {% assign optionHandleize = option.name | handleize %}
      {%- if optionHandleize == 'color' -%}
        <fieldset id="ProductSelect-option-{{ forloop.index0 }}" name="{{ option.name | handleize }}">
          <legend>
            {{ option.name | escape }}
          </legend>
          <div class="swatch-container">
            {%- for value in option.values -%}
              <!-- Varaible state check if not available set this to Disable -->
              {%- assign variant_state = true -%}

              {%- if product.options.size == 1 -%}
                {%- unless product.variants[forloop.index0].available -%}
                  {%- assign variant_state = false -%}
                {%- endunless -%}
              {%- endif -%}
              {% assign myIndex = forloop.index %}
              {% for variant in product.variants %}
                {% if variant.title contains value %}
                  <input
                    type="radio"
                    style="display: none"
                    {% if option.selected_value == value %}checked="checked"{% endif %}{% unless variant_state %}disabled="disabled"{% endunless %}value="{{ value | escape }}"data-index="option{{ forloop.index }}"name="{{ option.name | handleize }}"id="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}">
                  <label style=" background: {% if variant.image != blank %}url({{ variant.image | img_url: "master" }}){% else %}{{ value | handleize }}{% endif %}; " for="ProductSelect-option-{{ option.name | handleize }}-{{ value | escape }}"></label>
                  {% break %}
                {% endif %}
              {% endfor %}
            {%- endfor -%}
          </div>
        </fieldset>
      {%- else -%}
        <label for="ProductSelect-option-{{ forloop.index0 }}">
          {{ option.name | escape }}
        </label>
        <select id="ProductSelect-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
          {%- for value in option.values -%}
            {% assign valueCheck = value | handleize %}
            <option value="{{ value | escape }}"{% if valueCheck contains 'unselected' %}selected="selected"disabled{% endif %}>
              {{ value | escape }}
            </option>


          {%- endfor -%}
        </select>
      {%- endif -%}

    {%- endfor -%}
  {%- endunless -%}
</div>